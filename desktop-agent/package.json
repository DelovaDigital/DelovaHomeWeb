{
  "name": "delovahome-desktop-agent",
  "version": "1.0.0",
  "description": "DelovaHome Desktop Agent for PC Monitoring",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pub": "electron-builder -p always"
  },
  "author": "Alessio Depreytere",
  "license": "ISC",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "bonjour-service": "^1.3.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "mqtt": "^5.3.5",
    "systeminformation": "^5.21.22"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.delovahome.agent",
    "productName": "DelovaHome Agent",
    "mac": {
      "identity": null,
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "DelovaDigital",
        "repo": "DelovaHomeWeb"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
